{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/mobile/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["apps/mobile/**/*", "apps/mobile/src/**/*"]
}
